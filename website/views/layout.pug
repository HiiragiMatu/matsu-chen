  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      a.navbar-brand(href='#') Matsu
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.mr-auto.mt-2.mt-lg-0 
          li.nav-item.active 
            a.nav-link(href='/')
              | Home 
              span.sr-only (current)
          li.nav-item
            a.nav-link(href='/about') About
          li.nav-item.dropdown
            a#navbarDropdown.nav-link.dropdown-toggle(href='/portofio' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
              | Porfolio
            .dropdown-menu(aria-labelledby='navbarDropdown')
              a.dropdown-item(href='/ml') Machine Learning
              a.dropdown-item(href='/nlp') Natural Language Process
              .dropdown-divider
              a.dropdown-item(href='/games') Games
        form.form-inline.my-2.my-lg-0
          input.form-control.mr-sm-2(type='search' placeholder='Search' aria-label='Search')
          button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
